{
    "manifest_version": 3, 
    "name": "cheap-perscriptions-finder", 
    "description": "Find the cheapest perscriptions on the internet",
    "background": {
        "service_worker": "background.js"
    },
    "version": "1.0",
    "icons": {
        "16": "images/RB.png", 
        "48": "images/RB.png",
        "128": "images/RB.png"
    }, 
    "permissions": [
        "nativeMessaging"
    ],
    "host_permissions": ["https://*/*"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"], 
        "js": ["scrape.js"]
    }]
}
